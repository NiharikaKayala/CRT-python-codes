password=input("enter the password: ")
upper = False
lower = False
digit = False
space = True
spec = False
special_chars = "!@#$%^&*-_"
if len(password)>= 8:
    for i in password:
        if(i>="A" and i<="Z"):
            upper = True
        elif(i>="a" and i<="z"):
            lower = True
        elif(i>="0" and i<="9"):
            digit = True
        elif i in special_chars:
            spec = True
        else:
            space=False
            break
if (upper and lower and digit and space and spec)==True:
    print(" Password is valid.")
else:
    print(" Password is invalid.")
